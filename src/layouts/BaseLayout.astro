---
import '../styles/global.css'; // Ensure Tailwind is included in this CSS file
---

<html lang="en" class="bg-gray-100 text-gray-900">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Base Layout</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <header class="bg-blue-600 text-white py-4 sticky top-0 z-10 shadow-md">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold">Welcome to My Website</h1>
        <nav>
          <ul class="flex space-x-4">
            <li><a href="#home" class="hover:underline">Home</a></li>
            <li><a href="#services" class="hover:underline">Services</a></li>
            <li><a href="#projects" class="hover:underline">Projects</a></li>
            <li><a href="#contact" class="hover:underline">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <main class="flex-grow container mx-auto py-8">
      <!-- Render the content passed to this layout -->
      <slot />
    </main>
    <footer class="bg-gray-800 text-white py-4">
      <div class="container mx-auto text-center">
        <p>&copy; 2025 My Website</p>
      </div>
    </footer>
  </body>
</html>
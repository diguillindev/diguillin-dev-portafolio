---
// Nada necesario aquí, puedes dejar vacío
---

<!-- Carrusel -->
<section class="py-10 bg-base-200 mt-16" id="projects">
  <div class="max-w-6xl mx-auto px-4 text-center">

    <h2 class="text-3xl font-bold mb-8">Proyectos de Desarrollo WordPress</h2>

    <!-- Carousel -->
    <div class="carousel w-full rounded-box shadow overflow-x-auto snap-x snap-mandatory scroll-smooth">

      <!-- Proyecto 1 -->
      <div id="item1" class="carousel-item w-full snap-start relative flex-shrink-0">
        <img src="/cristianbravo.webp" class="w-full h-96 object-contain" alt="Cristian Bravo - Juegos Interactivos" />
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6 text-left text-white">
          <h3 class="text-xl font-bold">Cristian Bravo</h3>
          <p class="mb-4">Desarrollo de juegos interactivos.</p>
          <a href="https://cristianbravo.cl/ " target="_blank" class="btn btn-primary btn-sm">Ver sitio</a>
        </div>
      </div>

      <!-- Proyecto 2 -->
      <div id="item2" class="carousel-item w-full snap-start relative flex-shrink-0">
        <img src="/tecsoschile.webp" class="w-full h-96 object-contain" alt="Tecsos Chile - One Page" />
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6 text-left text-white">
          <h3 class="text-xl font-bold">Tecsos Chile</h3>
          <p class="mb-4">Desarrollo One Page profesional y moderno.</p>
          <a href="https://tecsoschile.cl/ " target="_blank" class="btn btn-primary btn-sm">Ver sitio</a>
        </div>
      </div>

      <!-- Proyecto 3 -->
      <div id="item3" class="carousel-item w-full snap-start relative flex-shrink-0">
        <img src="/canvasadvertisign.webp" class="w-full h-96 object-contain" alt="Canvas Advertisign - One Page" />
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6 text-left text-white">
          <h3 class="text-xl font-bold">Canvas Advertisign</h3>
          <p class="mb-4">Catálogo de proyectos en formato One Page.</p>
          <a href="https://canvas-advertising.com/ " target="_blank" class="btn btn-primary btn-sm">Ver sitio</a>
        </div>
      </div>

      <!-- Proyecto 4 -->
      <div id="item4" class="carousel-item w-full snap-start relative flex-shrink-0">
        <img src="/unisonwat.webp" class="w-full h-96 object-contain" alt="Unisonway - One Page" />
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6 text-left text-white">
          <h3 class="text-xl font-bold">Unisonway</h3>
          <p class="mb-4">Desarrollo One Page intuitivo y dinámico.</p>
          <a href="https://unisonway.com/ " target="_blank" class="btn btn-primary btn-sm">Ver sitio</a>
        </div>
      </div>

      <!-- Proyecto 5 -->
      <div id="item5" class="carousel-item w-full snap-start relative flex-shrink-0">
        <img src="/innovo.webp" class="w-full h-96 object-contain" alt="Innovo Constructores - One Page" />
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6 text-left text-white">
          <h3 class="text-xl font-bold">Innovo Constructores</h3>
          <p class="mb-4">Diseño web corporativo y elegante.</p>
          <a href="https://innovoconstructores.cl/ " target="_blank" class="btn btn-primary btn-sm">Ver sitio</a>
        </div>
      </div>

      <!-- Proyecto 6 -->
      <div id="item6" class="carousel-item w-full snap-start relative flex-shrink-0">
        <img src="/kung-fu.webp" class="w-full h-96 object-contain" alt="Kung-Fu Chile - Sitio Corporativo" />
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6 text-left text-white">
          <h3 class="text-xl font-bold">Kung-Fu Chile</h3>
          <p class="mb-4">Desarrollo web corporativa con WordPress.</p>
          <a href="https://kungfuchile.cl/ " target="_blank" class="btn btn-primary btn-sm">Ver sitio</a>
        </div>
      </div>

    </div>

    <!-- Indicadores -->
    <div class="flex justify-center gap-2 mt-4" id="carouselIndicators">
      <button class="btn btn-xs btn-neutral" data-target="item1">1</button>
      <button class="btn btn-xs btn-neutral" data-target="item2">2</button>
      <button class="btn btn-xs btn-neutral" data-target="item3">3</button>
      <button class="btn btn-xs btn-neutral" data-target="item4">4</button>
      <button class="btn btn-xs btn-neutral" data-target="item5">5</button>
      <button class="btn btn-xs btn-neutral" data-target="item6">6</button>
    </div>

  </div>
</section>

<script>
  document.querySelectorAll('#carouselIndicators button').forEach(button => {
    button.addEventListener('click', function (this: HTMLButtonElement) {
      const targetId = this.getAttribute('data-target');
      const targetItem = targetId ? document.getElementById(targetId) : null;

      if (targetItem) {
        targetItem.scrollIntoView({
          behavior: 'smooth',
          inline: 'center',
          block: 'nearest'
        });
      }
    });
  });
</script>